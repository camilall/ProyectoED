<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/comedor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="166dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="225dp"
                android:background="#00000000"
                android:backgroundTint="#C61313"
                android:fontFamily="serif"
                android:shadowColor="#070707"
                android:text="UN"
                android:textColor="#4B1D97"
                android:textSize="65sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="326dp"
                android:layout_height="133dp"
                android:background="#00000000"
                android:backgroundTint="#C61313"
                android:fontFamily="serif"
                android:shadowColor="#050505"
                android:text="comedor"
                android:textColor="#119A3F"
                android:textSize="65sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/unal_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="213dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="147dp"
                android:layout_height="78dp"
                android:onClick="iraAuth"
                android:text="Ingresar" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>